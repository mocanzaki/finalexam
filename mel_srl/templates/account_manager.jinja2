{% extends "layout.jinja2" %}

{% block content %}
<div class = "container">
    <br/>
    <h2> Manage users </h2>
    <br/>
    <div class="form-inline">
      <div class="form-group">
        <label for="search" class = "sr-only">Search:</label>
        <input type="text" class="form-control form-control-lg" id="search" placeholder="Search">
      </div>
      <button style = "margin-left: 1%" type="submit" onclick = "filter_users()" class="btn btn-primary">Search</button>
    </div>
    <br/>
    <table class="table table-hover">
    <thead class = "thead-dark">
        <tr><th>ID</th><th>Username</th><th>Name</th><th>E-mail</th><th>Phone</th><th>Action</th><th></th></tr>
    </thead>
    <tbody id = "mainbody">
        {% for i in data %}
        <tr><td>{{i[0]}}</td><td>{{i[1]}}</td><td>{{i[2]}}</td><td>{{i[3]}}</td><td>{{i[4]}}</td>
        <td>
            {% if i[5] == 0 %}
                <button id = "btn{{i[0]}}" class = "btn btn-info" onclick = "block({{i[0]}})">Block</button>
            {% else %}
                <button id = "btn{{i[0]}}" class = "btn btn-info" onclick = "unblock({{i[0]}})">Unblock</button>
            {% endif %}
        </td>
            {% if i[6] == 0 %}
            <td><button id = "btn_admin{{i[0]}}" class = "btn btn-info" onclick = "make_admin({{i[0]}})">Make Admin</button></td></tr>
            {% else %}
            <td><button id = "btn_admin{{i[0]}}" class = "btn btn-info" onclick = "make_user({{i[0]}})">Make User</button></td></tr>
            {% endif %}

        {% endfor %}
    </tbody>
    </table>
</div>
{% endblock content %}